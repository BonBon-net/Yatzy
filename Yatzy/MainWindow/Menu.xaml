<UserControl x:Class="Yatzy.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Yatzy"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox x:Name="txtSpillerNavn" HorizontalAlignment="Left" Margin="647,61,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="txtSpillerNavn_TextChanged"/>
        <DataGrid x:Name="SpillerListe" ItemsSource="{Binding SpillerListe}" Margin="593,184,10,10" SelectionChanged="dgbPlayerList_SelectionChanged" IsReadOnly="True" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Navn" Binding="{Binding Navn}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btnTilføjSpiller" Content="Tilføj Spiller" IsEnabled="False" HorizontalAlignment="Left" Margin="674,84,0,0" VerticalAlignment="Top" Click="TilføjSpiller_Click"/>
        <Button x:Name="btnFjernSpiller" IsEnabled="False" Content="Fjern Spiller" HorizontalAlignment="Left" Margin="674,109,0,0" VerticalAlignment="Top" Click="FjernSpiller_Click"/>
        <Button x:Name="btnStartSpil" Content="Start Spill" HorizontalAlignment="Left" Margin="593,109,0,0" VerticalAlignment="Top" Click="StartSpil_Click" RenderTransformOrigin="1.345,0.522"/>
        <TextBlock HorizontalAlignment="Left" Margin="593,152,0,0" TextWrapping="Wrap" Text="Spiller Liste" VerticalAlignment="Top" TextAlignment="Center" FontSize="20" MaxWidth="197" MinWidth="197" Width="197"/>
    </Grid>
</UserControl>
