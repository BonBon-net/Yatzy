<UserControl x:Class="Yatzy.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Yatzy"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox x:Name="txtSpillerNavn" HorizontalAlignment="Left" Margin="647,61,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <DataGrid x:Name="dgbPlayerList" ItemsSource="{Binding SpillerListe}" Margin="367,184,10,10" SelectionChanged="dgbPlayerList_SelectionChanged" AutoGenerateColumns="False" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Navn" Binding="{Binding Navn}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btnTilføjSpiller" Content="Tilføj Spiller" HorizontalAlignment="Left" Margin="674,84,0,0" VerticalAlignment="Top" Click="TilføjSpiller_Click"/>
        <Button x:Name="btnFjernSpiller" Content="Fjern Spiller" HorizontalAlignment="Left" Margin="674,159,0,0" VerticalAlignment="Top" Click="FjernSpiller_Click"/>
        <Button x:Name="btnStartSpil" Content="Start Spill" HorizontalAlignment="Left" Margin="367,159,0,0" VerticalAlignment="Top" Click="StartSpil_Click"/>
    </Grid>
</UserControl>
