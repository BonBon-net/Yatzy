<UserControl x:Class="Yatzy.Terninger"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Yatzy"
             mc:Ignorable="d" 
             Height="450" Width="800"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Image x:Name="imgTerningSelected1" Visibility="Hidden" HorizontalAlignment="Left" Height="120" Margin="0,0,0,0" VerticalAlignment="Top" Width="120"/>
        <Image x:Name="imgTerning1" Visibility="Visible" HorizontalAlignment="Left" Height="100" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" MouseUp="Terning1Selected_MouseClick"/>
        <Image x:Name="imgTerningSelected2" Visibility="Hidden" HorizontalAlignment="Left" Height="120" Margin="110,0,0,0" VerticalAlignment="Top" Width="120"/>
        <Image x:Name="imgTerning2" Visibility="Visible" HorizontalAlignment="Left" Height="100" Margin="120,10,0,0" VerticalAlignment="Top" Width="100" MouseUp="Terning2Selected_MouseClick"/>
        <Image x:Name="imgTerningSelected3" Visibility="Hidden" HorizontalAlignment="Left" Height="120" Margin="220,0,0,0" VerticalAlignment="Top" Width="120"/>
        <Image x:Name="imgTerning3" Visibility="Visible" HorizontalAlignment="Left" Height="100" Margin="230,10,0,0" VerticalAlignment="Top" Width="100" MouseUp="Terning3Selected_MouseClick"/>
        <Image x:Name="imgTerningSelected4" Visibility="Hidden" HorizontalAlignment="Left" Height="120" Margin="330,0,0,0" VerticalAlignment="Top" Width="120"/>
        <Image x:Name="imgTerning4" Visibility="Visible" HorizontalAlignment="Left" Height="100" Margin="340,10,0,0" VerticalAlignment="Top" Width="100" MouseUp="Terning4Selected_MouseClick"/>
        <Image x:Name="imgTerningSelected5" Visibility="Hidden" HorizontalAlignment="Left" Height="120" Margin="440,0,0,0" VerticalAlignment="Top" Width="120"/>
        <Image x:Name="imgTerning5" Visibility="Visible" HorizontalAlignment="Left" Height="100" Margin="450,10,0,0" VerticalAlignment="Top" Width="100" MouseUp="Terning5Selected_MouseClick"/>
        <Button Content="Kast" HorizontalAlignment="Left" Margin="265,130,0,0" VerticalAlignment="Top" Click="KastTerninger_Click" RenderTransformOrigin="-1.395,0.555"/>
        <DataGrid ItemsSource="{Binding SpillerListe}"
                FlowDirection="RightToLeft"
                IsReadOnly="True" HorizontalAlignment="Left"
                VerticalAlignment="Top"
                AutoGenerateColumns="False" MinHeight="230"
                Margin="565,8,0,0" 
                MinWidth="430" Width="430">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="LayoutTransform">
                        <Setter.Value>
                            <TransformGroup>
                                <RotateTransform Angle="-90"/>
                            </TransformGroup>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="LayoutTransform">
                        <Setter.Value>
                            <TransformGroup>
                                <RotateTransform Angle="-90"/>
                            </TransformGroup>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.CellStyle>
            <DataGrid.LayoutTransform>
                <TransformGroup>
                    <RotateTransform Angle="-90"/>
                </TransformGroup>
            </DataGrid.LayoutTransform>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Navn" Binding="{Binding Navn}" />
                <DataGridTextColumn Header="enere" Binding="{Binding Score[0]}" />
                <DataGridTextColumn Header="toere" Binding="{Binding Score[1]}" />
                <DataGridTextColumn Header="3'ere" Binding="{Binding Score[2]}" />
                <DataGridTextColumn Header="4'ere" Binding="{Binding Score[3]}" />
                <DataGridTextColumn Header="5'ere" Binding="{Binding Score[4]}" />
                <DataGridTextColumn Header="6'ere" Binding="{Binding Score[5]}" />
                <DataGridTextColumn Header="sum" Binding="{Binding Score[6]}" />
                <DataGridTextColumn Header="Bonus" Binding="{Binding Score[7]}" />
                <DataGridTextColumn Header="Et Par" Binding="{Binding Score[8]}" />
                <DataGridTextColumn Header="To Par" Binding="{Binding Score[9]}" />
                <DataGridTextColumn Header="tre Par" Binding="{Binding Score[10]}" />
                <DataGridTextColumn Header="Fire Par" Binding="{Binding Score[11]}" />
                <DataGridTextColumn Header="Lille straight" Binding="{Binding Score[12]}" />
                <DataGridTextColumn Header="Stor straight" Binding="{Binding Score[13]}" />
                <DataGridTextColumn Header="Hus" Binding="{Binding Score[14]}" />
                <DataGridTextColumn Header="Chance" Binding="{Binding Score[15]}" />
                <DataGridTextColumn Header="Yatzy" Binding="{Binding Score[16]}" />
                <DataGridTextColumn Header="Sum" Binding="{Binding Score[17]}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
