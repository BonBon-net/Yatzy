<UserControl x:Class="Yatzy.Terninger"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Yatzy"
             mc:Ignorable="d" 
             Height="700" Width="1000">
    <Grid>
        <Image x:Name="imgTerningSelected1" Visibility="Hidden" HorizontalAlignment="Left" Height="120" Margin="0,0,0,0" VerticalAlignment="Top" Width="120"/>
        <Image x:Name="imgTerning1" Visibility="Visible" HorizontalAlignment="Left" Height="100" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" MouseUp="Terning1Selected_MouseClick"/>
        <Image x:Name="imgTerningSelected2" Visibility="Hidden" HorizontalAlignment="Left" Height="120" Margin="110,0,0,0" VerticalAlignment="Top" Width="120"/>
        <Image x:Name="imgTerning2" Visibility="Visible" HorizontalAlignment="Left" Height="100" Margin="120,10,0,0" VerticalAlignment="Top" Width="100" MouseUp="Terning2Selected_MouseClick"/>
        <Image x:Name="imgTerningSelected3" Visibility="Hidden" HorizontalAlignment="Left" Height="120" Margin="220,0,0,0" VerticalAlignment="Top" Width="120"/>
        <Image x:Name="imgTerning3" Visibility="Visible" HorizontalAlignment="Left" Height="100" Margin="230,10,0,0" VerticalAlignment="Top" Width="100" MouseUp="Terning3Selected_MouseClick"/>
        <Image x:Name="imgTerningSelected4" Visibility="Hidden" HorizontalAlignment="Left" Height="120" Margin="330,0,0,0" VerticalAlignment="Top" Width="120"/>
        <Image x:Name="imgTerning4" Visibility="Visible" HorizontalAlignment="Left" Height="100" Margin="340,10,0,0" VerticalAlignment="Top" Width="100" MouseUp="Terning4Selected_MouseClick"/>
        <Image x:Name="imgTerningSelected5" Visibility="Hidden" HorizontalAlignment="Left" Height="120" Margin="440,0,0,0" VerticalAlignment="Top" Width="120"/>
        <Image x:Name="imgTerning5" Visibility="Visible" HorizontalAlignment="Left" Height="100" Margin="450,10,0,0" VerticalAlignment="Top" Width="100" MouseUp="Terning5Selected_MouseClick"/>
        <Button x:Name="btnKast" Content="Kast" IsEnabled="True" HorizontalAlignment="Left" Margin="265,130,0,0" VerticalAlignment="Top" Click="KastTerninger_Click" RenderTransformOrigin="-1.395,0.555"/>
        <TextBlock x:Name="txbKastTilbage" Text="Rulls: 0" HorizontalAlignment="Left" Margin="296,132,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="txbSpillerTur" Text="{Binding SpillerTur.Navn}" HorizontalAlignment="Right" Margin="0,132,740,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:Name="btnRegister" Content="Register" IsEnabled="False" HorizontalAlignment="Left" Margin="352,130,0,0" VerticalAlignment="Top" Click="Register_Click"/>
        <DataGrid ItemsSource="{Binding SpillerListe}" x:Name="dgSpillerScoreBoard"
                FlowDirection="RightToLeft" 
                IsReadOnly="True" HorizontalAlignment="Left"
                VerticalAlignment="Top" 
                AutoGenerateColumns="False" MinHeight="250"
                Margin="560,8,0,0" 
                MinWidth="485" Width="450" SelectionUnit="Cell" SelectedCellsChanged="dgSpillerScoreBoard_SelectionChanged">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="LayoutTransform">
                        <Setter.Value>
                            <TransformGroup>
                                <RotateTransform Angle="-90"/>
                            </TransformGroup>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="LayoutTransform">
                        <Setter.Value>
                            <TransformGroup>
                                <RotateTransform Angle="-90"/>
                            </TransformGroup>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.CellStyle>
            <DataGrid.LayoutTransform>
                <TransformGroup>
                    <RotateTransform Angle="-90"/>
                </TransformGroup>
            </DataGrid.LayoutTransform>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Navn" Binding="{Binding Navn}" />
                <DataGridTextColumn Header="Enere" Binding="{Binding Enere}" />
                <DataGridTextColumn Header="Toere" Binding="{Binding Toere}" />
                <DataGridTextColumn Header="Treere" Binding="{Binding Treere}" />
                <DataGridTextColumn Header="Firere" Binding="{Binding Firere}" />
                <DataGridTextColumn Header="Femmere" Binding="{Binding Femmere}" />
                <DataGridTextColumn Header="Seksere" Binding="{Binding Seksere}" />
                <DataGridTextColumn Header="SUM" Binding="{Binding SUM}" />
                <DataGridTextColumn Header="Bonus" Binding="{Binding Bonus}" />
                <DataGridTextColumn Header="Et Par" Binding="{Binding EtPar}" />
                <DataGridTextColumn Header="To Par" Binding="{Binding ToPar}" />
                <DataGridTextColumn Header="Tre Ens" Binding="{Binding TreEns}" />
                <DataGridTextColumn Header="Fire Ens" Binding="{Binding FireEns}" />
                <DataGridTextColumn Header="Lille Straight" Binding="{Binding LilleStraight}" />
                <DataGridTextColumn Header="Stor Straight" Binding="{Binding StorStraight}" />
                <DataGridTextColumn Header="Hus" Binding="{Binding Hus}" />
                <DataGridTextColumn Header="Chance" Binding="{Binding Chance}" />
                <DataGridTextColumn Header="Yatzy" Binding="{Binding Yatzy}" />
                <DataGridTextColumn Header="Total" Binding="{Binding TotalSum}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
