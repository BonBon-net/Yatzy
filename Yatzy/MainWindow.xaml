<Window x:Class="Yatzy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yatzy"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="MainGrid">
        <TextBox x:Name="txtSpillerNavn" HorizontalAlignment="Left" Margin="647,61,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <DataGrid x:Name="dgbPlayerList" ItemsSource="{Binding PlayerList}" Margin="367,184,10,10" SelectionChanged="dgbPlayerList_SelectionChanged" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Navn" Binding="{Binding }"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btnTilføjSpiller" Content="Tilføj Spiller" HorizontalAlignment="Left" Margin="674,84,0,0" VerticalAlignment="Top" Click="TilføjSpiller_Click"/>
        <Button x:Name="btnFjernSpiller" Content="Fjern Spiller" HorizontalAlignment="Left" Margin="674,159,0,0" VerticalAlignment="Top" Click="FjernSpiller_Click"/>
    </Grid>
</Window>
